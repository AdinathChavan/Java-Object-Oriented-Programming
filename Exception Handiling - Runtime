package exceptionhandling;

public class Arithmetic {
    public static void main(String[] args) {
        int a= 23;
        int b = 0;
        float c = a/b;
        System.out.println(c);
    }
}
    /*Exception in thread "main" java.lang.ArithmeticException: / by zero
at exceptionhandling.Arithmetic.main(Arithmetic.java:7)*/

   //this exception is known as Runtime Exception because exception we got in runtime.
   // exception type is ArithmeticException. cannot devide by zero.
